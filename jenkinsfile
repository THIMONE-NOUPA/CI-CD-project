pipeline {
    agent any
    environment {
        SONARQUBE_SERVER = 'Sonar-uk' // Nom de votre serveur SonarQube configuré dans Jenkins
    }
    stages {
        stage('Cloning GitHub Repo') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], 
                          userRemoteConfigs: [[credentialsId: 'githubid', 
                                               url: 'https://github.com/THIMONE-NOUPA/CI-CD-project.git']]])
            }
        }
        stage('Maven Package') {
            agent {
                docker {
                    image 'maven:3.8.4-openjdk-11' // Maven avec JDK 11
                    args '-v /root/.m2:/root/.m2' // Monter le repository Maven local
                }
            }
            steps {
                sh 'mvn clean package'
            }
        }
        stage('SonarQube Analysis') {
            agent {
                docker {
                    image 'sonarsource/sonar-scanner-cli:latest' // Image Docker contenant le scanner SonarQube
                    args '-v /root/.sonar:/root/.sonar' // Monter le répertoire local pour stocker les fichiers temporaires SonarQube
                }
            }
            environment {
                SONAR_TOKEN = credentials('sonarqube-auth-token') // Jeton d'authentification SonarQube stocké dans Jenkins Credentials
            }
            steps {
                withSonarQubeEnv('Sonar-uk') {
                    sh '''
                        sonar-scanner \
                        -Dsonar.projectKey=CI-CD-project \
                        -Dsonar.projectName=CI-CD-project \
                        -Dsonar.sources=src \
                        -Dsonar.host.url=https://sonarqube.devopseasylearning.uk/ \
                        -Dsonar.login=$SONAR_TOKEN
                    '''
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline terminé.'
        }
    }
}
