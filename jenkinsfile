pipeline {
    agent any
    stages {
        stage('Cloning GitHub Repo') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], 
                               extensions: [], 
                               userRemoteConfigs: [[credentialsId: 'githubid', 
                                                   url: 'https://github.com/THIMONE-NOUPA/CI-CD-project.git']])
            }
        }
        stage('Maven unit test') {
            agent {
                docker {
                    image 'maven:3.8.4-adoptopenjdk-11' // Maven with JDK 11
                    args '-v /root/.m2:/root/.m2' // Mount local Maven repository
                }
            }
            steps {
                sh 'mvn clean test'
            }
        }
    }
}

